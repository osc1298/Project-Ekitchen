@model ekitchen.Entidades.EF.Usuario

<h1 id="login-title" class="text-center">Ingresar</h1>
<br />
<body>
    <div class="container container-fluid">
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <div class="alert-danger">@TempData["Error"]</div>
            <div class="alert-success">@TempData["Resultado"]</div>
            <div class="form-group">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <label>Email:</label>
                    <br>
                    <input class="form-control col-xs-12" type="email" name="Email" />
                    <br>
                    <label>Password:</label>
                    <br>
                    <input class="form-control col-xs-12" type="password" name="Password" />
                    <br>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <br>
                    <input class="btn btn-info" type="submit" name="Ingresar" />
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}